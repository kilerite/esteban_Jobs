<%= form_with(model: apply) do |form| %>
  <% if apply.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(apply.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
        <% apply.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.hidden_field :job_id, value: @apply.job_id %>
  </div>

  <div class="mb-3">
    <label for="dropdown" class="form-label">Opciones de estado</label>
    <%= select_tag 'apply[status]', options_for_select(Apply.statuses.map { |key, value| [key.to_s.humanize, value] }, @apply.status), class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.submit "Aplica al trabajo", class: "btn btn-success w-100" %>
  </div>
<% end %>
