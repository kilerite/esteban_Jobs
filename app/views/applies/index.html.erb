<div class="row py-5">
    <h2 class="text-center">Solicitudes de Empleo</h2>
</div>

<% if @applies.empty? %>
    <div class="row py-5">
        <div class="col-12">
            <div class="alert alert-warning" role="alert">
                No tienes solicitudes de empleo.
            </div>
        </div>
    </div>
<% else %>
    <div class="row py-5">
        <% @applies.each do |apply| %>
            <div class="col-12">
                <h4 class="text-center">Solicitud de Empleo #<%= apply.id %></h4>
                <p>Trabajo: <%= apply.job.title %></p>
                <p>Estado: <%= apply.status %></p>
            </div>
        <% end %>
    </div>
<% end %>

<div class="row py-5">
    <%= link_to "Volver", root_path %>
</div>
