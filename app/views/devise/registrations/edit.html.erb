<div class="row py-5">
  <h2 class="text-center">Modifica tu usuario</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, class: ["form-label"]  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label "Nombre y apellido", class: ["form-label"] %>
    <%= f.text_field :name, autocomplete: "name", class: 'form-control' %>
  </div>

  <div class="mb-3 py-3">
    <h4 class="text-center">La siguiente información puedes dejarla en blanco si no deseas modificarla</h4>
  </div>

  <div class="mb-3">
    <%= f.label "Avatar", class: ["form-label"] %>
    <%= f.file_field :avatar, multiple: true, class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-3">
    <%= f.label :password, "Contraseña", class: ["form-label"]  %> <em>(<%= @minimum_password_length %> caracteres mínimos)</em><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirmar contraseña", class: ["form-label"]  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password, "Contraseña actual", class: ["form-label"]  %> <i>(Es necesaria tu contraseña actual para confirmar los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Actualiza tu cuenta", class: "btn btn-success w-100" %>
  </div>
<% end %>

<div class="row py-5">
  <div class="col-6">
    <span>Si no estás conforme con el servicio puedes eliminar tu cuenta</span>
  </div>
  <div class="col-6">
    <%= button_to "Elimina mi cuenta", registration_path(resource_name), data: { confirm: "¿Estas seguro?", turbo_confirm: "¿Estas seguro?" }, method: :delete, class: "btn btn-danger w-100" %>
  </div>
</div>

<div class="row py-5">
  <%= link_to "Volver", :back %>
</div>
